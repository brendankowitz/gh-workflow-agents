{
  "name": "gh-workflow-agents",
  "version": "0.1.0",
  "description": "Reusable AI Workflow Agents for GitHub - Automate product management, code review, research, and QA",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:actions": "npm run build && node scripts/bundle-actions.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:sdk": "tsx scripts/test-copilot-sdk.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github",
    "actions",
    "ai",
    "agents",
    "copilot",
    "automation",
    "product-management",
    "code-review"
  ],
  "author": "Brendan Kowitz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brendankowitz/gh-workflow-agents.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@github/copilot-sdk": "^0.1.13",
    "@octokit/rest": "^21.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "dotenv": "^16.4.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  }
}
